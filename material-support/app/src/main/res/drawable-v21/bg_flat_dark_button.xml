<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="?android:colorControlHighlight">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/dark_flat_button_pressed"/>
                    <size android:height="@dimen/button_min_height"
                        android:width="@dimen/button_flat_min_width"/>
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/dark_flat_button_pressed"/>
                    <size android:height="@dimen/button_min_height"
                        android:width="@dimen/button_flat_min_width"/>
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/dark_flat_button_disabled"/>
                    <size android:height="@dimen/button_min_height"
                        android:width="@dimen/button_flat_min_width"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/button_radius"/>
                    <solid android:color="@color/dark_flat_button_normal"/>
                    <size android:height="@dimen/button_min_height"
                        android:width="@dimen/button_flat_min_width"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>